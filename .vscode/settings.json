{
	"[javascript][typescript][json][scss]": { "editor.defaultFormatter": "biomejs.biome" },
	"[vue][markdown][html][github-actions-workflow][yaml]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[svg]": { "editor.defaultFormatter": "jock.svg" },

	"editor.formatOnSave": true,

	"github.copilot.chat.codeGeneration.instructions": [{ "file": "/architecture.md" }],
	"github.copilot.chat.codeGeneration.useInstructionFiles": true,

	"links.resources": [
		{
			"url": "https://github.com/okineadev/okineadev-website",
			"title": "GitHub Repo"
		},
		{
			"url": "https://okinea.dev",
			"title": "This Website"
		},
		{
			"url": "https://github.com/okineadev/okineadev-website/issues",
			"title": "Issues",
			"description": "Report bugs, suggest features, or ask questions."
		},
		{
			"url": "https://github.com/okineadev/okineadev-website/blob/main/NOTES.md",
			"title": "Notes and attributions",
			"description": "Notes and attributions for this website."
		}
	],

	"material-icon-theme.activeIconPack": "vue",
	"material-icon-theme.folders.associations": {
		"cli/components": "react-components"
	},
	"material-icon-theme.folders.customClones": [
		{
			"name": "cv",
			"base": "admin",
			"color": "blue-400",
			"folderNames": ["cv"]
		}
	],

	"vite.devCommand": "bun run dev",
	"typescript.tsdk": "node_modules/typescript/lib"
}
