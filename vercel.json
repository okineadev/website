{
	"$schema": "https://openapi.vercel.sh/vercel.json",
	"public": true,

	"framework": "vite",
	"buildCommand": "bun run --bun render:cli && bun run --bun build:all",

	"rewrites": [
		{
			"source": "/",
			"has": [
				{
					"type": "header",
					"key": "user-agent",
					"value": "^curl/.+"
				}
			],
			"destination": "/cli.txt"
		},
		{
			"source": "/cli",
			"has": [
				{
					"type": "header",
					"key": "user-agent",
					"value": "^curl/.+"
				}
			],
			"destination": "/cli.txt"
		}
	],
	"redirects": [
		{
			"source": "/cli",
			"missing": [
				{
					"type": "header",
					"key": "user-agent",
					"value": "^curl/.+"
				}
			],
			"destination": "https://github.com/okineadev/website/tree/main/cli"
		}
	],

	"installCommand": "bun install --frozen-lockfile"
}
